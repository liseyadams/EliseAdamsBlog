<div class="col-sm-8 blog-main">

      <h2><%= @blog.title %></h2>

    <nav class="breadcrumb">
      <%= link_to "Home", root_path, class: 'breadcrumb-item' %>
      <%= link_to @blog.topic.title, topic_path(@blog.topic), class: 'breadcrumb-item' %>
      <span class="breadcrumb-item active"><%= @blog.title %></span>
      <span class="pull-right auth-links btn btn-outline-info hovering-effect back">
        <%= link_to fa_icon('trash-o'), @blog, method: :delete, data: { confirm: "Are you sure you want to delete this post?"} if logged_in?(:site_admin) %>
      </span>
      <span class="pull-right auth-links btn btn-outline-info hovering-effect back">
        <%= link_to fa_icon('pencil-square-o'), edit_blog_path(@blog) if logged_in?(:site_admin) %>
      </span>
    </nav>

      <p>
        <%= image_tag @blog.main_image, width: '100%' %>
      </p>

      <p>
        <%= markdown(@blog.body) %>
      </p>

      <%= render 'comments/comment_form' %>

      <div id="comments" data-blog-id="<%= @blog.id %>">
        <%= render @blog.comments %>
      </div>

      <div class="auth-links btn btn-outline-info hovering-effect back">
          <%= link_to 'Back', blogs_path %>
      </div>
</div>
