<div class="col-sm-8 blog-main">

      <h2><%= @blog.title %></h2>
      <p>
        <%= image_tag @blog.main_image, width: '100%' %>
      </p>

      <p>
        <%= @blog.body %>
      </p>

      <% unless current_user.is_a? GuestUser %>
        <%= form_for @comment, url: '#' do |f| %>
          <div class="form-group">
            <%= f.label :content %>
            <%= f.text_area :content , class: 'form-control' %>
          </div>

          <%= f.submit 'Post Comment', class: "auth-links btn btn-outline-info hovering-effect back" %>
        <% end %>
      <% end %>

      <%= render @blog.comments %>


      <div class="auth-links btn btn-outline-info hovering-effect back">
          <%= link_to 'Edit', edit_blog_path(@blog) %>
        </div>
      <div class="auth-links btn btn-outline-info hovering-effect back">
          <%= link_to 'Back', blogs_path %>
      </div>
</div>
